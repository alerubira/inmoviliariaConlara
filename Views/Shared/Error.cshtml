@model InmobiliariaConlara.Models.ErrorViewModel

@{
    ViewData["Title"] = "Error";
}

<!-- Toast container -->
<div class="toast-container position-fixed top-0 end-0 p-3" style="z-index: 1080;">
    @if (TempData["Error"] != null)
    {
        <div id="globalErrorToast" class="toast align-items-center text-dark bg-white border border-danger border-1" role="alert" aria-live="assertive" aria-atomic="true" style="min-width: 200px; max-width: 350px;">
            <div class="d-flex">
                <div class="toast-body">
                    @TempData["Error"]
                </div>
                <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
        </div>
    }
</div>

<div class="container mt-5 text-center">
    <h1 class="display-4">Se produjo un error al procesar su solicitud</h1>
    <p>ID de solicitud: <strong>@Model.RequestId</strong></p>
    <p class="text-muted">Puede volver a la <a href="@Url.Action("Index", "Home")">página de inicio</a>.</p>
</div>

<!-- Asegurate de tener bootstrap.bundle.js cargado (ej: en _Layout.cshtml) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        var toastEl = document.getElementById('globalErrorToast');
        if (toastEl) {
            var toast = new bootstrap.Toast(toastEl, { delay: 8000 });
            toast.show();
        }
    });
</script>
