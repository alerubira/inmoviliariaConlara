@model IEnumerable<Inmobiliaria.Models.Pagos>
@{
	ViewData["Title"] = "Pagos";
}

<h1>
	Pagos
	<!--<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Create" title="Crear">Crear Pagos<i class="fa-solid fa-plus"></i></a>
	</div>-->
</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.IdPagos)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.IdContratos)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DireccionInmueble)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Importe)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Concepto)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.FechaPago)
			</th>
			
			<th>
				@Html.DisplayNameFor(model => model.NumeroCuota)
			</th>
			
				
			
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IdPagos)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.IdContratos)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DireccionInmueble)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Importe)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Concepto)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.FechaPago)
				</td>
				
				<td>
					@Html.DisplayFor(modelItem => item.NumeroCuota)
				</td>
				    
                <td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdPagos" title="Editar">
							<i class="fa-solid fa-pen"></i>
						</a>
						@if (User.IsInRole("Administrador")){
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdPagos" title="Eliminar">
							<i class="fa-solid fa-trash-can"></i>
						</a>
						}						
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="d-flex justify-content-center">
    <nav>
        <ul class="pagination">
            @if (ViewBag.PaginaActual > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.PaginaActual - 1)">Anterior</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i">@i</a>
                </li>
            }

            @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.PaginaActual + 1)">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
</div>
