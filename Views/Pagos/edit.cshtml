@model Inmobiliaria.Models.Pagos
@using Inmobiliaria.Models

@{
    ViewData["Title"] = "Editar Pago";
}

<h4>Editar Pago</h4>
<hr />
<div class="row">
    <div class="col-md-4 bg-white p-3 border rounded shadow-sm">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
           <div class="form-group">
                     <label asp-for="DireccionInmueble" class="control-label"></label>
                    <input asp-for="DireccionInmueble" class="form-control" readonly/>
                    <span asp-validation-for="DireccionInmueble" class="text-danger"></span>
                    <!-- Campo oculto para enviar el ID -->
                    <input type="hidden" id="IdContratos" name="IdContratos" value=@Model.IdContratos />
                    <input type="hidden" id="IdPagos" name="IdPagos" value=@Model.IdPagos />
            </div>

                        
             <div class="form-group">
                <label asp-for="Importe" class="control-label"></label>
                <input asp-for="Importe" class="form-control" readonly/>
                <span asp-validation-for="Importe" class="text-danger"></span>
                <!--<input type="hidden" id="importe" name="importe" /> --> 
            </div>  
             <div class="form-group">
                <label asp-for="FechaPago" class="control-label"></label>
                <input asp-for="FechaPago" class="form-control" />
                <span asp-validation-for="FechaPago" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="Concepto" class="control-label"></label>
                <input asp-for="Concepto" class="form-control"readonly />
                <span asp-validation-for="Concepto" class="text-danger"></span>
                 <input type="hidden" id="MesPago" name="mesPago" value=@Model.MesPago />
            </div>
           

             <div class="form-group">
                <label asp-for="NumeroCuota" class="control-label"></label>
                <input asp-for="NumeroCuota" class="form-control"readonly />
                <span asp-validation-for="NumeroCuota" class="text-danger"></span>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
