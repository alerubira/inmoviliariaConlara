@model IEnumerable<Inmobiliaria.Models.Pagos>
@{
    ViewData["Title"] = "Pagos del Inquilino";
}

<h1>Pagos del Inquilino</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().IdPagos)</th>
            <th>@Html.DisplayNameFor(model => model.IdContratos)</th>
            <th>@Html.DisplayNameFor(model => model.First().FechaPago)</th>
            <th>@Html.DisplayNameFor(model => model.First().Importe)</th>
            <th>@Html.DisplayNameFor(model => model.First().DireccionInmueble)</th>
            <th>@Html.DisplayNameFor(model => model.First().NumeroCuota)</th>
            <th>@Html.DisplayNameFor(model => model.First().Concepto)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pago in Model)
        {
            <tr>
                <td>@pago.IdPagos</td>
                <td>@pago.IdContratos</td>
                <td>@pago.FechaPago.ToShortDateString()</td>
                <td>@pago.Importe.ToString("C")</td>
                <td>@pago.DireccionInmueble</td>
                <td>@pago.NumeroCuota</td>
                <td>@pago.Concepto</td>
            </tr>
        }
    </tbody>
</table>
