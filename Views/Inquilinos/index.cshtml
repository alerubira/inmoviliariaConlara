@model IEnumerable<Inmobiliaria.Models.Inquilino>
@{
	ViewData["Title"] = "Inquilinos";
	
}

<h1>
	Inquilinos
	<div class="btn-group pull-right">
		<a class="btn btn-primary" asp-action="Create" title="Crear">Crear Inquilino<i class="fa-solid fa-plus"></i></a>
	</div>
</h1>
<table class="table table-striped">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.IdInquilino)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Nombre)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Apellido)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Dni)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Telefono)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.eMail)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.IdInquilino)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Nombre)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Apellido)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Dni)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Telefono)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.eMail)
				</td>
				<td>
					<div class="btn-group" role="group">
						<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdInquilino" title="Editar">
							<i class="fa-solid fa-pen"></i>
						</a>
						@if (User.IsInRole("Administrador")){
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdInquilino" title="Eliminar">
							<i class="fa-solid fa-trash-can"></i>
						</a>
						}
						<a class="btn btn-secondary" asp-action="PorInquilino" asp-controller="Pagos" asp-route-id="@item.IdInquilino" title="Mis Pagos">
							 <i class="fa-solid fa-credit-card me-2"></i>
						</a>
					</div>
				</td>
			</tr>
		}
	</tbody>
</table>
<div class="d-flex justify-content-center">
    <nav>
        <ul class="pagination">
            @if (ViewBag.PaginaActual > 1)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.PaginaActual - 1)">Anterior</a>
                </li>
            }

            @for (int i = 1; i <= ViewBag.TotalPaginas; i++)
            {
                <li class="page-item @(i == ViewBag.PaginaActual ? "active" : "")">
                    <a class="page-link" href="?pageNumber=@i">@i</a>
                </li>
            }

            @if (ViewBag.PaginaActual < ViewBag.TotalPaginas)
            {
                <li class="page-item">
                    <a class="page-link" href="?pageNumber=@(ViewBag.PaginaActual + 1)">Siguiente</a>
                </li>
            }
        </ul>
    </nav>
</div>
